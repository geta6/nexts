{
  "name": "nexts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engineStrict": true,
  "engines": {
    "node": ">= 10.12.0",
    "yarn": ">= 1.10.1"
  },
  "scripts": {
    "dev": "next dev src/",
    "prestart": "next build src/",
    "start": "next start src/ -p $PORT"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix --project ./tsconfig.json",
      "prettier --write",
      "./bin/jest-without-argv",
      "git add"
    ],
    "*.{css,pcss}": [
      "stylelint --fix",
      "git add"
    ],
    "*.{png,jpg,jpeg,gif}": [
      "imagemin-lint-staged",
      "git add"
    ],
    "*.svg": [
      "svgo --config '{\"plugins\":[{\"removeViewBox\":false},{\"removeDimensions\":true},{\"convertColors\":{\"currentColor\":true}}]}'",
      "git add"
    ],
    "*.json": [
      "jsonlint",
      "git add"
    ],
    "*.{html,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "all",
    "printWidth": 120
  },
  "dependencies": {
    "@zeit/next-css": "1.0.1",
    "@zeit/next-typescript": "1.1.1",
    "next": "7.0.2",
    "react": "16.6.1",
    "react-dom": "16.6.1",
    "recharts": "1.3.6",
    "ts-node": "7.0.1",
    "typescript": "3.1.6"
  },
  "devDependencies": {
    "@types/next": "7.0.4",
    "@types/react": "16.7.1",
    "imagemin-lint-staged": "^0.3.0",
    "jsonlint": "1.6.3",
    "prettier": "1.15.1",
    "prettier-stylelint": "0.4.2",
    "stylelint": "9.7.1",
    "stylelint-config-rational-order": "0.0.2",
    "stylelint-config-standard": "18.2.0",
    "svgo": "^1.1.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-react": "3.6.0"
  }
}
